@namespace EDO_FOMS.Client.Pages.Agreements

@inject Microsoft.Extensions.Localization.IStringLocalizer<AgreementRejectDialog> _localizer

<EditForm Model="@question" OnValidSubmit="Ok">
    <MudDialog Style="background-color: var(--mud-palette-background-grey); min-width: 540px;">
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Outlined.HelpOutline" Class="mr-3 mb-n1" />
                @_localizer["Reason for rejection"]
            </MudText>
        </TitleContent>
    
        <DialogContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Variant="Variant.Outlined" @bind-Value="question.answer"></MudTextField>
                </MudItem>
            </MudGrid>
        </DialogContent>
    
        @*OnClick="Ok" Disabled="@(remark.Length == 0)"*@
        <DialogActions>
             <MudButton Variant="Variant.Outlined" ButtonType="ButtonType.Submit" Size="Size.Large" FullWidth="true" Color="Color.Error">
                 @_localizer["Reject"]
             </MudButton>
         </DialogActions>
    </MudDialog>
</EditForm>
