            <MudIconButton Icon="@Icons.Material.Outlined.AddLink" Color="Color.Inherit" Edge="Edge.End"/>
        </MudTooltip>*@
    </MudToolBar>
</MudPaper>

<MudContainer MaxWidth="MaxWidth.False" Class="pa-6">
    <EditForm Model="@_mailModel" OnValidSubmit="ToSend">
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem md="6">
                        <MudTextField @bind-Value="@_mailModel.Email" For="@(() => _mailModel.Email)" Label="@_localizer["Address"]" Variant="Variant.Text" />
                    </MudItem>

                    <MudItem md="6">
                        <MudTextField @bind-Value="@_mailModel.Theme" For="@(() => _mailModel.Theme)" Label="@_localizer["Theme"]" Variant="Variant.Text" />
                    </MudItem>

                    <MudItem md="12">
                        <MudTextField @bind-Value="@_mailModel.Text" For="@(() => _mailModel.Text)" Label="@_localizer["Mail Text"]" Variant="Variant.Outlined" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>

            <MudDivider />

            <MudCardActions>
                <MudButton FullWidth="true" Variant="Variant.Outlined" Color="Color.Primary" Class="ml-auto" ButtonType="ButtonType.Submit">@_localizer["Send"]</MudButton>
            </MudCardActions>
        </MudCard>
    </EditForm>
</MudContainer>

<MudDrawer Anchor="Anchor.Right" Elevation="1" Variant="@DrawerVariant.Persistent" ClipMode="DrawerClipMode.Always">
    <MudDrawerHeader Style="padding: 8px 4px 8px 16px;">
        <MudText Style="align-self:center;" Typo="Typo.h6" Inline="true">@_localizer[""]</MudText>
    </MudDrawerHeader>
    
    <MudDivider />

    <MudList Clickable="true" Class="py-0">
    </MudList>
</MudDrawer>
