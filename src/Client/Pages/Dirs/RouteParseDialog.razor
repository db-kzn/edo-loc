@inject Microsoft.Extensions.Localization.IStringLocalizer<RouteParseDialog> _localizer

@namespace EDO_FOMS.Client.Pages.Dirs

<MudDialog DefaultFocus="DefaultFocus.LastChild">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Outlined.Verified" Class="mr-3 mb-n1" />
            @_localizer["Check Result"]
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudGrid Style="min-width: 550px; max-height: 70vh; overflow-y: scroll;">
            @if (Result.HasFileName)
            {
                @if (Result.HasFileMask)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["File Mask"]" Variant="Variant.Text">
                            @(Result.FileMaskIsCorrect ? @_localizer["Is Correct"] : @_localizer["Is Wrong"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.DocTitle.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Doc Title"]" Variant="Variant.Text">
                            @(Result.DocTitle.HasError ? Result.DocTitle.Message :
                            Result.DocTitle.Match.Success ? Result.DocTitle.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.DocNumber.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Doc Number"]" Variant="Variant.Text">
                            @(Result.DocNumber.HasError ? Result.DocNumber.Message :
                            Result.DocNumber.Match.Success ? Result.DocNumber.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.DocDate.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Doc Date"]" Variant="Variant.Text">
                            @(Result.DocDate.HasError ? Result.DocDate.Message :
                            Result.DocDate.Match.Success ? Result.DocDate.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.DocNotes.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Doc Notes"]" Variant="Variant.Text">
                            @(Result.DocNotes.HasError ? Result.DocNotes.Message :
                            Result.DocNotes.Match.Success ? Result.DocNotes.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.CodeMo.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Code Mo"]" Variant="Variant.Text">
                            @(Result.CodeMo.HasError ? Result.CodeMo.Message :
                            Result.CodeMo.Match.Success ? Result.CodeMo.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.CodeSmo.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Code Smo"]" Variant="Variant.Text">
                            @(Result.CodeSmo.HasError ? Result.CodeSmo.Message :
                            Result.CodeSmo.Match.Success ? Result.CodeSmo.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }

                @if (Result.CodeFund.HasPattern)
                {
                    <MudItem xs="12">
                        <MudField Label="@_localizer["Code Fund"]" Variant="Variant.Text">
                            @(Result.CodeFund.HasError ? Result.CodeFund.Message :
                            Result.CodeFund.Match.Success ? Result.CodeFund.Match.Value : @_localizer["Error"])
                        </MudField>
                    </MudItem>
                }
            }
            else
            {
                <MudItem xs="12">
                    <MudField Label="@_localizer["Error"]" Variant="Variant.Text"
                          Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Outlined.Report" AdornmentColor="Color.Warning">
                        @_localizer["No File Name Example"]
                    </MudField>
                </MudItem>
            }
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Class="mx-2" ButtonType="ButtonType.Submit" Variant="Variant.Outlined" FullWidth="true" Color="Color.Default" EndIcon="@Icons.Material.Outlined.Done"
                   OnClick="() => Ok()">
            @_localizer["Ok"]
        </MudButton>
    </DialogActions>
</MudDialog>
